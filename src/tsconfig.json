{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"tsBuildInfoFile": "../dist/.tsbuildinfo",
		"ignoreDeprecations": "5.0",
		"experimentalDecorators": true,
		"moduleResolution": "Node16",
		"paths": {
			"#root/*": [
				"*"
			],
			"#lib/*": [
				"lib/*"
			],
			"#utils/*": [
				"lib/util/*"
			]
		},
		"composite": true,
	},
	"include": [
		".",
		"**/*.json"
	],
	"exclude": [
		"tsconfig.json"
	]
}