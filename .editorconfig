root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab
tab_width = 4

[*.{js,cjs,mjs,ts}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md,rmd,mkd,mkdn,mdwn,mdown,markdown,litcoffee}]
trim_trailing_whitespace = false

[*.{ps1}]
max_line_length = 115
indent_size = 4
indent_style = space
